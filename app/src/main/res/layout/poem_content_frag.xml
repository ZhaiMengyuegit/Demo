<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:andriod="http://schemas.android.com/apk/res/android"
    andriod:layout_width="match_parent"
    andriod:layout_height="match_parent"
    andriod:background="@drawable/fragment_two">
    <LinearLayout
        andriod:id="@+id/poem_visibility_layout"
        andriod:layout_width="match_parent"
        andriod:layout_height="wrap_content"
        andriod:orientation="vertical">
        <LinearLayout
            andriod:layout_width="match_parent"
            andriod:layout_height="wrap_content"
            andriod:orientation="horizontal">
            <TextView
                andriod:id="@+id/poem_content_title"
                andriod:layout_width="wrap_content"
                andriod:layout_height="wrap_content"
                andriod:layout_weight="1"
                andriod:gravity="center"
                andriod:textSize="20sp"/>
            <TextView
                andriod:id="@+id/poem_content_author"
                andriod:layout_width="wrap_content"
                andriod:layout_height="wrap_content"
                andriod:layout_weight="1"
                andriod:gravity="center"
                andriod:textSize="15sp"/>
            <TextView
                andriod:id="@+id/poem_content_kind"
                andriod:layout_width="wrap_content"
                andriod:layout_height="wrap_content"
                andriod:layout_weight="1"
                andriod:gravity="center"
                andriod:textSize="15sp"/>
        </LinearLayout>
        <View
            andriod:layout_width="match_parent"
            andriod:layout_height="1dp"
            andriod:background="#000"/>

        <TextView
            andriod:id="@+id/poem_content_content"
            andriod:layout_width="250dp"
            andriod:layout_height="match_parent"
            andriod:layout_gravity="center"
            andriod:textSize="20sp"
            andriod:singleLine="false"
            andriod:ellipsize="none"
            andriod:maxLines="4"
            andriod:gravity="center"/>
        <TextView
            andriod:id="@+id/poem_content_intro"
            andriod:layout_width="match_parent"
            andriod:layout_height="wrap_content"
            andriod:padding="15dp"
            andriod:textSize="15sp"
            andriod:gravity="center"/>


    </LinearLayout>
</RelativeLayout>